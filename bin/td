    os.path.join(os.path.expanduser("~"), "Documents", "TelemetryDiskLogs")
]
for logdir in logdirs:
    if os.path.exists(logdir):
        [loadf(os.path.join(logdir, filename)) for filename in os.listdir(logdir) if filename.endswith("TXT")]
